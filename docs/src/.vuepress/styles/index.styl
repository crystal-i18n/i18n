@import url('https://fonts.googleapis.com/css?family=Lato:400,700')

body {
  font-family 'Lato', sans-serif !important
}

.features-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.features-wrapper .feature {
  margin: 0.5em;
  padding: 0.5em;
  flex: 1 1 auto;
  width: 200px;
  background: #eee;
  border-radius: 2px;
  border: 1px solid #dedede;
  text-align: center;
}

a.getting-started-button {
  margin-top: 10px;
  margin-bottom: 10px;
  display: inline-block;
  font-size: 1rem;
  color: #fff;
  background-color: #272c35;
  padding: .8rem 1rem;
  border-radius: 4px;
  transition: background-color .1s ease;
  box-sizing: border-box;
  text-decoration: none !important;
  font-weight: bold;
}
a.getting-started-button:hover {
  background-color: #414959;
}
